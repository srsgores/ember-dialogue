{{#if dismissible}}
	<header class="dialog-header">
		<button class="dialog-dismiss" {{action "dismiss"}}>{{dismissText}}</button>
	</header>
{{/if}}

{{#if hasBlock}}
	{{yield}}
{{else}}
	{{#if hasTitle}}
		<h1 class="dialog-title">{{title}}</h1>
	{{/if}}
	{{#if hasDescription}}
		<p class="dialog-description">{{description}}</p>
	{{/if}}
{{/if}}
